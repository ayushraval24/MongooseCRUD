<%- include('./partials/header.ejs') %> 
  <body>
      <div class="container">
         <div class="row">
            <div class="col-sm-5 mt-5">
                <h3 class="text-center p-3 bg-dark text-white">Add New Student</h3>

                <form method="POST">
                    <div class="form-group">
                      <label for="Name">Name</label>
                      <input type="text" class="form-control" id="Name" name="name" required>
                    </div>
                    <div class="form-group">
                      <label for="Age">Age</label>
                      <input type="number" class="form-control" id="Age" name="age" required>
                    </div>
                    <div class="form-group">
                        <label for="Email address">Email address</label>
                        <input type="email" class="form-control" id="Email address" name="email" required>
                      </div>
                    <div class="form-group">
                      <label for="Department">Department</label>
                      <input type="text" class="form-control" id="Department" name="department" required/>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </div>
            
            <div class="col-sm-7 mt-5">
                <h3 class="text-center p-3 bg-primary text-white">Student List</h3>
                <table class="table table-hover">
                  <thead class="text-center">
                    <tr>
                      <th scope="col">No</th>
                      <th scope="col">Name</th>
                      <th scope="col">Age</th>
                      <th scope="col">Email</th>
                      <th scope="col">Department</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <% if (students.length>0){ %> 
                    <tbody>
                      <% var i=1 %> 
                      <% students.forEach(student=>{ %> 
                      <tr class="text-center">
                        <th scope="row"><%= i %> </th>
                        <td><%=student.name%></td>
                        <td><%=student.age%></td>
                        <td><%=student.email%></td>
                        <td><%=student.department%></td>
                        <td>
                            <a href="/students/edit/<%= student._id %> "><i class="fas fa-edit text-primary"></i></a>
                          <a href="/students/delete/<%=student._id%>"><i class="fas fa-trash text-danger"></i></a>
                        </td>
                      </tr>
                      <% i=i+1}) %> 
                    </tbody>
                    <% } %> 
                  </table>
            </div>
         </div>
      </div>

<%- include('./partials/footer.ejs')  %> 